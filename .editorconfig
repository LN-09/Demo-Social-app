# EditorConfig giúp đồng bộ quy tắc format code giữa các IDE
root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 2
trim_trailing_whitespace = true
insert_final_newline = true

[*.ts,*.tsx,*.js,*.jsx]
indent_size = 2

[*.json,*.yml,*.yaml]
indent_size = 2

[*.md,*.html,*.css,*.scss]
indent_size = 2
trim_trailing_whitespace = false

[Makefile]
indent_style = tab
